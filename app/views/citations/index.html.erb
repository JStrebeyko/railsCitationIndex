
<h1>Quote index</h1>

<%= link_to 'New citation', new_citation_path %>

<table>
  <tr>
    <th>Quotes:</th>
    <th></th>
  </tr>

  <% @citations.each do |citation| %>
    <tr>
      <td><%= citation.text %></td>
      <td><%= link_to 'Show', citation_path(citation) %></td>
      <td><%= link_to 'Edit', edit_citation_path(citation) %></td>
      <td><%= link_to 'Destroy', citation_path(citation),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>